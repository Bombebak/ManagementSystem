@model ManagementSystem.Api.Models.ViewModels.Message.MessageSaveRequestViewModel


<div class="save-message-container" style="margin-bottom: 15px; width: 80%; margin-left: 10%; margin-right: 10%;">
    <div class="col-md-12">
        @Html.HiddenFor(e => e.Id)
        @Html.HiddenFor(e => e.ParentId)
        @Html.HiddenFor(e => e.TaskId)
        <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <textarea asp-for="Message" class="form-control" rows="3" placeholder="Write your message here"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 d-flex">
                <div class="row">
                    <div class="col-md-12">
                        <label asp-for="Files" class="control-label d-flex align-self-end" style="margin-right: 10px;"></label>
                        <div class="custom-file">
                            <input asp-for="Files" class="custom-file-input uploadable-files" multiple>
                            <label class="custom-file-label" for="customFile">Choose files</label>
                        </div>
                        <span asp-validation-for="Files" class="text-danger"></span>
                    </div>
                    @{await Html.RenderPartialAsync("~/Views/File/_UploadFiles.cshtml", Model.ExistingFiles);}
                </div>
            </div>
            <div class="col-md-6" style="align-self: flex-end">
                <div style="display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary save-message">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
