@model List<ManagementSystem.Api.Models.ViewModels.Task.TaskListItemViewModel>

@{
}

<div id="tasklist" class="task-list-container list-container">
    <div id="tasklist-spinner" class="loading-spinner hide">
        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div id="tasklist-items">
        @if (Model == null || !Model.Any())
        {
            <p style="color: black;">Ingen tasks :(</p>
        }
        @foreach (var task in Model)
        {
            await Html.RenderPartialAsync("~/Views/Task/_TaskItems.cshtml", task);
        }
    </div>  
</div>

