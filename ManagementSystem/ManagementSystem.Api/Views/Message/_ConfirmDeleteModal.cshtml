@model ManagementSystem.Api.Models.ViewModels.Message.MessageDeleteViewModel

@{
}


<form asp-controller="Message" asp-action="DeleteMessage" id="deleteMessageForm">
    <div class="modal-header">
        <h5 class="modal-title">Delete message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body" id="deleteMessageModalBody">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            @Html.HiddenFor(e => e.Id)
            <div class="col-md-12">
                <p>Are you sure you want to delete this message?</p>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-danger relative" id="deleteMessageBtn">Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</form>