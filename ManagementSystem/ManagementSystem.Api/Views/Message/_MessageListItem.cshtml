@model ManagementSystem.Api.Models.ViewModels.Message.MessageListViewModel

<div class="table-parent-item">
    <div class="table-item" style="margin-bottom: 15px; color: black;">
        <div class="row w-100" style="align-items: center;">
            <div class="col-md-5 d-flex align-items-center">
                <img src="@Model.Author.ProfileImagePath" class="user-list-avatar" />
                <span style="padding-left: 10px;">@Model.Author.Name</span>
            </div>
            <div class="col-md-4 d-flex justify-content-end">
                @if (Model.CurrentUserId == Model.Author.Id)
                {
                    <a class="btn btn-info save-open-message" data-id="@Model.Id" data-taskid="@Model.TaskId">
                        <i class="fa fa-pencil"></i>Edit
                    </a>
                }
                @if (Model.CurrentUserId == Model.Author.Id)
                {
                    <a class="btn btn-danger delete-open-message-modal" data-id="@Model.Id">
                        <i class="fa fa-pencil"></i>Delete
                    </a>
                }

            </div>
            <div class="col-md-3 d-flex justify-content-end">
                @Model.CreationDateStr
            </div>
        </div>
        <div class="col-md-12" style="padding-bottom: 10px; padding-top: 10px;">
            @Model.Message
        </div>
        @if (Model.Files != null && Model.Files.Any())
        {
            await Html.RenderPartialAsync("~/Views/File/_UploadedFiles.cshtml", Model.Files);
        }

        <div class="reply-message-container w-100">

        </div>
    </div>    
</div>

