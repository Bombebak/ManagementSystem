@model ManagementSystem.Api.Models.ViewModels.Task.TaskListCriteriaViewModel

<div id="" class="task-criteria-container sticky-top">
    <div class="form-group">
        <label asp-for="ProjectId" class="control-label"></label>
        <select asp-for="ProjectId" asp-items="@(new SelectList(Model.Projects, "Value", "Label"))" class="form-control js-tasks-search-criteria"></select>
    </div>
    <div class="form-group">
        <label asp-for="SprintId" class="control-label"></label>
        <select asp-for="SprintId" asp-items="@(new SelectList(Model.Sprints, "Value", "Label"))" class="form-control js-tasks-search-criteria"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Users</label>
        <span id="taskSearch_taskWithUsers"></span>
    </div>
</div>